{
  "name": "resume-publisher",
  "version": "1.0.0",
  "description": "Resume Publisher Monorepo",
  "private": true,
  "workspaces": [
    "api",
    "ui",
    "temporal-worker"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:ui\" \"npm run dev:worker\"",
    "dev:api": "npm run dev --workspace=api",
    "dev:ui": "npm run dev --workspace=ui",
    "dev:worker": "npm run start --workspace=temporal-worker",
    "build": "npm run build:api && npm run build:ui && npm run build:worker",
    "build:api": "npm run build --workspace=api",
    "build:ui": "npm run build --workspace=ui",
    "build:worker": "npm run build --workspace=temporal-worker",
    "start": "concurrently \"npm run start:api\" \"npm run start:ui\" \"npm run start:worker\"",
    "start:api": "npm run start --workspace=api",
    "start:ui": "npm run preview --workspace=ui",
    "start:worker": "node temporal-worker/lib/worker.js",
    "lint": "npm run lint --workspace=api && npm run lint --workspace=ui && npm run lint:worker",
    "lint:api": "npm run lint --workspace=api",
    "lint:ui": "npm run lint --workspace=ui",
    "lint:worker": "npm run lint --workspace=temporal-worker",
    "docker:up": "docker-compose up",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:build:dev": "docker-compose -f docker-compose.dev.yml build",
    "docker:rebuild:dev": "docker-compose -f docker-compose.dev.yml build --no-cache && docker-compose -f docker-compose.dev.yml up"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
